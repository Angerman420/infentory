&GLOBAL
  PROJECT MD
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
  &MD
    STEPS 10
    TIMESTEP 0.5
    TEMPERATURE 300
 &END MD
   &PRINT
   &RESTART
     BACKUP_COPIES 0
     &EACH
       MD 1
     &END EACH
   &END RESTART
   &VELOCITIES
     &EACH
       MD 1
     &END EACH
   &END VELOCITIES
   &TRAJECTORY
     &EACH
       MD 1
     &END EACH
   &END TRAJECTORY
 &END PRINT

&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &SCF
      SCF_GUESS RESTART
      &PRINT
      &END PRINT
      EPS_SCF 1.0E-5
      MAX_SCF 300
      &DIAGONALIZATION  ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION

      &MIXING  T
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING
    &END SCF
    &QS
      EPS_DEFAULT 1.0E-5
    &END QS
    &MGRID
      NGRIDS 4
      CUTOFF 280
      REL_CUTOFF 30
    &END MGRID
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
  &END DFT
  &SUBSYS
    &KIND H
      ELEMENT H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      ELEMENT O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &CELL
      ABC    9.8528    9.8528    9.8528
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME geometry.xyz
      COORD_FILE_FORMAT xyz
    &END TOPOLOGY
  &END SUBSYS
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
&END FORCE_EVAL
